{
  "openapi": "3.1.0",
  "info": {
    "title": "Contoh Dokumentasi Interkoneksi eJafung",
    "version": "1.0.0"
  },
  "webhooks": {
    "profil/{nip}/{token}": {
      "get": {
        "parameters": [
          {
            "name": "nip",
            "in": "path",
            "description": "Parameter NIP Pegawai tsb",
            "required": true,
            "schema": {
              "type": "string",
              "minLength": 20,
              "maxLength": 20
            }
          },
          {
            "name": "token",
            "in": "path",
            "description": "Token",
            "required": true,
            "schema": {
              "type": "string",
              "minLength": 20,
              "maxLength": 35
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Berhasil",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/profil"
                }
              }
            }
          },
          "400" : {
            "description": "Terdapat kesalahan atau profil JF tidak aktif",
            "content": {
              "application/json": {
                "example": {
                  "message": "Terdapat kesalahan atau profil JF tidak aktif"
                }
              }
            }
          }
        }
      }
    },
    "kirim_ak": {
      "post": {
        "requestBody": {
          "description": "Contoh Data yang dikirim ke endpoint",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/angka_kredit"
              },
              "example": {
                "nip": "19970606206121002",
                "id_jenjang": 5,
                "ak_knv": "2.5",
                "ak_total": "20",
                "is_skp_pendidikan": 1,
                "id_skp_pendidikan" : 5,
                "tahun": "2024",
                "token": "xxxxxxxxx"
              }
            }
          }
        },
        "responses": {
          "200":{
            "description": "Berhasil Kirim Angka Kredit ke eJafung Kemenkeu",
            "content": {
              "application/json": {
                "example": {
                  "message": "Pelaporan Angka Kredit telah berhasil dikirim ke eJafung"
                }
              }
            }
          },
          "400" : {
            "description": "Terdapat Kesalahan Validasi",
            "content": {
              "application/json": {
                "example": {
                  "message": "Terdapat kesalahan validasi"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "angka_kredit": {
        "required": [
          "nip",
          "id_jenjang",
          "ak_knv",
          "ak_total",
          "token",
          "tahun",
          "komponen_lain"
        ],
        "properties": {
          "nip": {
            "type": "string"
          },
          "id_jenjang": {
            "type": "integer"
          },
          "ak_knv": {
            "type": "string"
          },
          "ak_total": {
            "type": "string"
          },
          "tahun": {
            "type": "string"
          },
          "token" : {
            "type": "string"
          },
          "is_skp_pendidikan": {
            "type": "integer"
          },
          "id_skp_pendidikan" : {
            "type" : "integer"
          },
          "komponen_lain" : {
            "type" : "string"
          }
        }
      },
      "profil" : {
        "properties": {
          "nip": {
            "type": "string"
          },
          "nama": {
            "type": "string"
          },
          "id_jenjang": {
            "type": "integer"
          },
          "id_didik" : {
            "type": "integer"
          }
        }
      }
    }
  }
}